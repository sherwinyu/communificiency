<%= simple_form_for(@contribution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :project_id %>
    <%= f.input :reward_id %>
    <%= f.input :payment_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
