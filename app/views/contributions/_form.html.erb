<%= simple_form_for(@contribution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :project %>
    <%= f.association :reward %>
    <%= f.association :payment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
