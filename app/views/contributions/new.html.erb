<% provide(:title, 'Confirm contribution') %>
<div class="container">
  <div class="row">
    <div class="span12">

      <div class="hero-unit">
        <%= binding.pry %>
        <%= simple_form_for(@contribution, url: project_contributions_path(@project)) do |f| %>
          <h1>Thanks for helping <%= @project.name %><br> <small>You're almost there. Just a few more steps</small></h2>

          <h2 class="contributionPaymentHeader"> 1. Confirm your contribution </h2>
          <p> Confirm the amount you want to contribute to <%= @project.name %>.</p>
          <div class='step1'>
            <%= f.input :amount, class: "inputContributionAmount", label: false, wrapper: "prepend", input_html: {type: 'number'}  do %>
              <%= content_tag :span, "$", class: "add-on", id: 'inputContributionDollarSign' %>
              <%= f.input_field :amount, id: 'inputContributionAmount' %>
              <%= content_tag :span, ".00", class: "add-on", id: "inputContributionZeros" %>
            <% end %>
          </div>


          <br>


          <h2 class="contributionPaymentHeader"> 2. Choose your reward </h2>
          <%= f.association :reward, wrapper_html: {class: 'derp'}, as: "radio_buttons" %>
          <br>

          <h2 class="contributionPaymentHeader"> 3. Pay </h2>


          <%= f.button :submit, "Pay now!", id: "pay-button" %>



          <% end # form for %> 

          <%= link_to 'Back', contributions_path %>


        </div>

      </div><!--/span-->
    </div><!--/span-->


  </div><!--/.fluid-container-->





  <div class="control-group radio_buttons required derp">
    <label class="radio_buttons required control-label">
      <abbr title="required">*
      </abbr> Reward
    </label>
    <div class="controls">
      <label class="radio"> 
        <input class="radio_buttons required" id="contribution_reward_id_1" name="contribution[reward_id]" type="radio" value="1">Value meal
      </label>
      <label class="radio">
        <input class="radio_buttons required" id="contribution_reward_id_3" name="contribution[reward_id]" type="radio" value="3">Local farm tour
      </label>
      <label class="radio">
        <input class="radio_buttons required" id="contribution_reward_id_5" name="contribution[reward_id]" type="radio" value="5">Private meal
      </label>
      <label class="radio">
        <input checked="checked" class="radio_buttons required" id="contribution_reward_id_6" name="contribution[reward_id]" type="radio" value="6">Picture with the cheese truck
      </label>
      <label class="radio">
        <input class="radio_buttons required" id="contribution_reward_id_7" name="contribution[reward_id]" type="radio" value="7">Hunk o' Cheese
      </label>
    </div>
  </div>
