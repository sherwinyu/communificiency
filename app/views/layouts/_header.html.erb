<header class="navbar navbar-fixed-top">
<div class="navbar-inner">
  <div class="container">

    <div class="nav-collapse">
      <ul class="nav">
        <%= link_to image_tag("logo.png", alt: "Communificiency", id: 'logo' ), home_path %>
        <%= nav_li_tag(home_path) { '<i class="icon-home icon-black"></i> Home'} %>
        <%= nav_li_tag('Projects', :projects)  %>
        <%= nav_li_tag('About', about_path)  %>
      </ul>

      <ul class="nav pull-right">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="icon-user icon-black"></i>
          <%= current_user_signed_in? ? current_user.decorated_name : 'Your account'.html_safe %>
          <b class="caret"></b>
        </a>

        <ul class="dropdown-menu">
          <li><%= link_to "Sign in", sign_in_path if !current_user_signed_in? %></li>
          <li><%= link_to "Sign up", sign_up_path if !current_user_signed_in? %></li>
          <li><%= link_to "Edit profile", edit_user_registration_path if current_user_signed_in? %></li>
          <li><%= link_to "Sign out", sign_out_path if current_user_signed_in? %></li>
        </ul>
        </li>
      </ul>






      <% if false -%>
        <a class="btn btn-primary pull-right" href="http://twitter.github.com/bootstrap/">Twitter Bootstrap Home</a>
      <% end %>
    </div><!--/.nav-collapse -->


    <% if false -%>
      <div class="row-fluid">
        <%= link_to image_tag("logo.png", alt: "Communificiency", id: 'logo' ), home_path %>
        <nav> 
        <div class='span6 offset8'>
          <div class="nav-group pull-right"> 
            <ul class="nav mini-nav">
              <li> <%= link_to 'Home', home_path %><li>
              <li><%= link_to 'About', about_path %><li>
              <li><%= link_to 'Projects', about_path %><li>
            </ul>
            <ul class="nav mini-nav user-nav">
              <li><%= link_to current_user %> </li>
              <li><%= current_user_signed_in? ? link_to( current_user ) : link_to( 'Sign in', sign_in_path) %></li>
              <li><%= current_user_signed_in? ? link_to('Sign out', sign_out_path) : '' %></li>
            </ul>
          </div>
        </div>
        </nav>
      </div>
    <% end %>
  </div>
</div>
</header>
