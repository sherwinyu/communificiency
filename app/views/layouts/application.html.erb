<!DOCTYPE html>
<html>
  <head>
    <title> <%= full_title(yield(:title)) %> </title>
    <%= stylesheet_link_tag    "application", media: "all"%>
    <%= javascript_include_tag "application"%>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <div class="bg">
      <% image_tag "background1.jpg", class: 'bg' %>
      <% image_tag "background_smallercrop.jpg", class: 'bg' %>
    </div>
    <%= render 'layouts/header' %>
    <div class="container main">
      <%= render partial: 'layouts/flash', locals: {:flash => flash}%>
      <%= yield %>
      <%  debug(params) if Rails.env.development? %>
      <%  debug(flash) if Rails.env.development? %>
      <%  debug(flash.now) if Rails.env.development? %>
      <%  debug(session) if Rails.env.development? %>
      <%  debug(assigns) if Rails.env.development? %>
    </div>
  </body>
    <%=render 'layouts/footer' %>


</html>
