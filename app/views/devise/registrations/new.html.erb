<% provide(:title, 'Sign up') %>
<div class="hero-unit">
<h1 class="pageHeader">Create your Communificiency Account</h1>
  <div class='signUpForm'>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), validate: true, html: { class: 'signUpForm'}) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :email, :required => true, :autofocus => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn-primary blue" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
