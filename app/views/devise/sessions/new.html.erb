<h1 class="pageHeader">Sign in</h1>

<%# simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<%= simple_form_for(resource, :as => resource_name, url: user_session_path, validate: true) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, validate: {uniqueness: false, format: false} %>
    <%= f.input :password, :required => false, validate: {confirmation: false} %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
