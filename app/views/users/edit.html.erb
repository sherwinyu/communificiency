<% provide :title, "Edit profile" %>
<h1>Update your profile</h1>
<br>
<div class="well">
  <div class="row">
    <div class="span6 offset3">
      <%= simple_form_for @user, html: {class: 'form-horizontal'} do |f| %>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation, label: "Confirm password"  %>
        <%= f.input :admin, label: "Admin privileges" if current_user_admin? %>
        <div class="form-actions">
          <%= f.button :submit, "Save changes", class: "btn btn-large btn-primary" %>
        </div>
      <% end %>
      <%# gravatar_for @user %>
    </div>
  </div>
</div>

