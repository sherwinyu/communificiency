<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% @project.class.columns.each do |column| %>
    <div class="field">
      <div class="field">
        <%= f.label "#{column.name}".to_sym %> 
      </div>
      <%= generic_form_field(@project, f, column) %>
    </div>
  <% end %>
  <% @project.rewards.each do |r| %>
    <%= fields_for(r) do |rewards_form| %>
      <% r.class.columns.each do |rewards_column| %>
        <%= rewards_form.label "#{rewards_column.name}".to_sym %> 
        <%= generic_form_field(r, rewards_form, rewards_column) %>
      <% end %>
    <% end %>
  <% end %>




  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
