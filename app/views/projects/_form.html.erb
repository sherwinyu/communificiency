<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% @project.class.columns.each do |column| %>
    <div class="field">
      <div class="field">
        <%= f.label "#{column.name}".to_sym %> 
      </div>
      <%= generic_form_field(@project, f, column) %>
    </div>
  <% end %>

  <div class="project-edit-rewards">
    <h3> Project edit rewards </h3>
    <%= f.fields_for :rewards do |rewards_form| %>
      <% rewards_form.object.class.columns.each do |rewards_column| %>
        <%= rewards_form.label "#{rewards_column.name}".to_sym %> 
        <%= generic_form_field(rewards_form.object, rewards_form, rewards_column) %>
        <br>
      <% end %>
        <%= rewards_form.label :_destroy, "Remove question" %>
        <%= rewards_form.check_box :_destroy %>
    <% end %>
  </div>




  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
